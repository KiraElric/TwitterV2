<div class="col-12 border border-secondary rounded">
  <article class="media p-2">
    <div class="align-self-start">
      <figure class="figure">
        <img src="http://placehold.jp/64x64.png" class="figure-img img-fluid rounded-circle">
      </figure>
    </div>
    <div class="media-body">
      <div class=" container mt-0">
        <%= render 'form', tweet: @tweet %>
      </div>
    </div>
  </article>
</div>

<% @tweets.each do |tweet| %>
  <div class="col-12 border border-secondary rounded my-2">
    <article class="media p-2">
      <div class="align-self-start">
        <figure class="figure">
          <img src="http://placehold.jp/64x64.png" class="figure-img img-fluid rounded-circle mr-3">
        </figure>
      </div>
      <div class="media-body">
        <strong class="mt-0">User Name</strong>
        <br>
        <small>User Email</small>
        <p><%= tweet.content %></p>
          <div class="icon-link text-right inline-block">
            <%= link_to tweet do%>
              <span class="icon mr-1"><i class="fas fa-eye"></i></span>
            <% end %>
            <%= link_to tweet, method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?'} do %>
              <span class="icon"><i class="fas fa-trash-alt"></i></span>
            <% end %>
          </div>
      </div>
    </article>
  </div>
<% end %>

